{% extends 'base.html.twig' %}

{% block title %}New Product Category{% endblock %}

{% block body %}
    <h1>Create new Product Category</h1>

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.name, {
            'label': 'Name'
        }) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.description, {
            'label': 'Description'
        }) }}
    </div>
    <div class="mb-3">
        <button class="btn btn-outline-success">{{ button_label|default('Save') }}</button>
    </div>
    {{ form_end(form) }}

    <a class="btn btn-outline-primary" href="{{ path('product_category_index') }}">Back to categories list</a>
{% endblock %}
